.modal.fade.top30#modal_edit(tabindex="-1", role="dialog", aria-hidden="true")
	.modal-dialog.modal-lg
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal", aria-label="Close", ng-click="closeClaim()")
					span(aria-hidden="true") &times;
				h3 редактирование обращения
					span.bold  "{{moment(data.curr.dt).format('YYYY-MM-DD HH:mm')}}"
			.modal-body(style='background-color:#f9f9f9;')
				.tabbody
					table.table.table-condensed
						tbody
							tr
								td.text-right(width='30%', style='border: 0px; padding-top:10px;') Номер участка:
								td.bold(width='70%', style='border: 0px; padding-top:10px;') {{data.curr.pp}}
							tr
								td.text-right Дата/время обращения
								td {{moment(data.curr.dt).format('YYYY-MM-DD HH:mm')}}
							tr
								td.text-right Указано имя для обращения:
								td 
									input.form-control(ng-model='data.curr.alias')
							tr
								td.text-right Телефон:
								td 
									input.form-control(ng-model='data.curr.phone')
							tr
								td.text-right Коментарий:
								td 
									textarea.form-control(ng-model='data.curr.note', rows=5)
			.modal-footer.margin0
				.row
					.col-xs-2.text-left
						button.btn.btn-sm.btn.btn-default(ng-click='closeClaim()') Закрыть
					.col-xs-8
					.col-xs-2
						button.btn.btn-sm.btn-primary(ng-click='saveClaim(data.curr)', ng-show='isNeedSave()') Сохранить

